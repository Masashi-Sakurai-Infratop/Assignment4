<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-8 mx-auto">
      <h1>User info</h1>
      <%= render "/shared/error_message.html.erb", obj: @user%>
      <%= form_with model: @user, url: user_path, method: :patch do |f|%>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.file_field :profile_image, accept: "image/jpeg" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>