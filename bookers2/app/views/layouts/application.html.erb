<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" >
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <div class="container">
          <a href="<%= root_path %>" class="navbar-brand p-1">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item d-flex">
                  <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                  <i class="fas fa-home" style="color: #ffffff;"></i> Home
                  <% end %>
                </li>
                <li class="nav-item d-flex">
                  <%= link_to users_path , class: 'nav-link text-light' do %>
                  <i class="fas fa-users" style="color: #ffffff;"></i> Users
                  <% end %>
                </li>
                <li class="nav-item d-flex">
                  <%= link_to books_path , class: 'nav-link text-light' do %>
                  <i class="fas fa-book-open" style="color: #ffffff;"></i> Books
                  <% end %>
                </li>
                <li class="nav-item d-flex">
                  <%= link_to destroy_user_session_path, method: :delete , class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-out-alt" style="color: #ffffff;"></i> logout
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item d-flex">
                  <%= link_to root_path , class: 'nav-link text-light' do %>
                  <i class="fas fa-home" style="color: #ffffff;"></i> Home
                  <% end %>
                </li>
                <li class="nav-item d-flex">
                  <%= link_to home_about_path , class: 'nav-link text-light' do %>
                  <i class="fas fa-link" style="color: #ffffff;"></i> About
                  <% end %>
                </li>
                <li class="nav-item d-flex">
                  <%= link_to new_user_registration_path , class: 'nav-link text-light' do %>
                  <i class="fas fa-user-plus" style="color: #ffffff;"></i> sign up
                  <% end %>
                </li>
                <li class="nav-item d-flex">
                  <%= link_to new_user_session_path , class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-in-alt" style="color: #ffffff;"></i> login
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="col-8 mx-auto">
            <p class="text-center">
              CopyRight Infratop.inc
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>