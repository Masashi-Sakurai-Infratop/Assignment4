<!--ローカル変数としてbooksを定義した-->
<h2 class="pt-3">Books</h2>
<table class="table table-hover">
  <tbody>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(80, 80) %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %> </td>
        <td><%= book.body %></td>
      </tr>
     <% end %>
  </tbody>
</table>